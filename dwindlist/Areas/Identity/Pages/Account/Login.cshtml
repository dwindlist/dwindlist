@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="pt-4">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4 pt-2">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control text-dark" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label class="text-dark" asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control text-dark" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label class="text-dark" asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p class="pt-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-2 px-4 py-4 login-dwindlist">
            <img src="~/img/dwindlist.png" class="logo-login img-fluid">
        </div>
        <div class="col-md-6 py-4 login-dwindlist">
            <h1>dwindlist</h1>
            <h5>
                dwindlist (stylized with a lowercase “d”) is a gamified to-do list app aimed to help
                those who feel overwhelmed to complete even a single task. It encourages users to
                break down their tasks into smaller, more manageable tasks by allowing them to nest
                lists within lists down many levels.
            </h5>
        </div>
        </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
