@model dwindlist.Models.ViewModel.TodoList
@{
    ViewData["Title"] = "Home Page";
}

<h1>dwindlist > @Model.Label</h1>

<div class="container mt-4">
    <div class="row">
        <!-- Right Column (Button to Add Checkboxes) -->
        <div class="text-danger" role="alert" id="alert@(Model.RootId)"></div>
        <div class="form-group">
            <label for="new-item-label@(Model.RootId)">New Item:</label>
            <input type="text" class="form-control" id="new-item-label@(Model.RootId)">
            <button type="button" class="btn btn-primary add-item" id="add-item@(Model.RootId)" value="@Model.RootId">Add Item</button>
        </div>

        <div id="todo-list">
            @foreach(var item in Model.Items)
            {
            <div class="input-group mb-3" style="width: 100%;">
                <div class="input-group-prepend" style="width: 30px;">
                    <div class="input-group-text">
                        @if (item.Status == 'c')
                        {
                        <input type="checkbox" class="toggle-status" id="toggle-status@(item.Id)" value="@item.Id" aria-label="Main Checkbox" checked>
                        }
                        else
                        {
                        <input type="checkbox" class="toggle-status" id="toggle-status@(item.Id)" value="@item.Id" aria-label="Main Checkbox">
                        }
                    </div>
                </div>
                @if (item.Status == 'c')
                {
                <input type="text" style="text-decoration: line-through;" disabled="true" class="form-control" id="edit-item-label@(item.Id)" aria-label="Text input with checkbox" value="@item.Label">
                }
                else
                {
                <input type="text" style="text-decoration: none;" disabled="true" class="form-control" id="edit-item-label@(item.Id)" aria-label="Text input with checkbox" value="@item.Label">
                }
                <a href="/TodoItem/Index/@(item.Id)"><button class="btn btn-sm btn-secondary expand-item" id="expand-item@(item.Id)" value="@item.Id">Focus</button></a>
                <button class="btn btn-sm btn-success edit-item" id="edit-item@(item.Id)" value="@item.Id">Edit</button>
                <button class="btn btn-sm btn-primary save-item" id="save-item@(item.Id)" value="@item.Id" hidden>Save</button>
                <button class="btn btn-sm btn-danger">Delete</button>
            </div>
            <div class="col-md-11 float-end">
                <div class="text-danger" role="alert" id="alert@(item.Id)"></div>
                <div class="form-group">
                    <label for="new-item-label@(item.Id)">New Item:</label>
                    <input type="text" class="form-control" id="new-item-label@(item.Id)">
                    <button type="button" class="btn btn-primary add-item" id="add-item@(item.Id)" value="@item.Id">Add Item</button>
                </div>
                @foreach(var subitem in item.Children)
                {
                <div class="input-group mb-3" style="width: 100%;">
                    <div class="input-group-prepend" style="width: 30px;">
                        <div class="input-group-text">
                            @if (subitem.Status == 'c')
                            {
                            <input type="checkbox" class="toggle-status" id="toggle-status@(subitem.Id)" value="@subitem.Id" aria-label="Main Checkbox" checked>
                            }
                            else
                            {
                            <input type="checkbox" class="toggle-status" id="toggle-status@(subitem.Id)" value="@subitem.Id" aria-label="Main Checkbox">
                            }
                        </div>
                    </div>
                    @if (subitem.Status == 'c')
                    {
                    <input type="text" style="text-decoration: line-through;" disabled="true" class="form-control" id="edit-item-label@(subitem.Id)" aria-label="Text input with checkbox" value="@subitem.Label">
                    }
                    else
                    {
                    <input type="text" style="text-decoration: none;" disabled="true" class="form-control" id="edit-item-label@(subitem.Id)" aria-label="Text input with checkbox" value="@subitem.Label">
                    }
                    <a href="/TodoItem/Index/@(subitem.Id)"><button class="btn btn-sm btn-secondary expand-item" id="expand-item@(subitem.Id)" value="@subitem.Id">Focus</button></a>
                    <button class="btn btn-sm btn-success edit-item" id="edit-item@(subitem.Id)" value="@subitem.Id">Edit</button>
                    <button class="btn btn-sm btn-primary save-item" id="save-item@(subitem.Id)" value="@subitem.Id" hidden>Save</button>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </div>
                }
            </div>
            }
        </div>

        <!-- Navigation Bar Column (Left) -->
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">All</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Completed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">Incomplete</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        let testButton = $("#throwaway");

        testButton.click(function() {
            alert(testButton.val());
        });

        $(".toggle-status").click(function() {
            let thisElement = $(`#${$(this).attr("id")}`);
            let thisId = $(thisElement).val();

            thisElement.prop("disabled", true);
            $(`#new-item-label${thisId}`).prop("disabled", true);

            $.ajax({
                type: "PUT",
                url: `/todoitem/toggle/${thisId}`,
                success: function (response) {
                    // Handle the API response as needed
                    console.log("Todo list item toggled successfully");
                    window.location.reload();
                },
                error: function (error) {
                    // Handle API error
                    console.error("Error adding toggling todo list item:", error);
                    $(`#alert${thisId}`).text("An error occurred")
                    window.location.reload();
                }
            });
        });

        $(".add-item").click(function () {
            let thisElement = $(`#${$(this).attr("id")}`);
            let thisId = $(thisElement).val();

            thisElement.prop("disabled", true);

            let userData = {
                Label: $(`#new-item-label${thisId}`).val(),
                ParentId: thisId,
                Status: 'i'
            };

            console.log(userData);

            $.ajax({
                type: "POST",
                url: "/todoitem/add",
                data: JSON.stringify(userData),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // Handle the API response as needed
                    console.log("Todo list item added successfully");
                    window.location.reload();
                },
                error: function (error) {
                    // Handle API error
                    console.error("Error adding todo list item:", error);
                    $(`#alert${thisId}`).text("An error occurred")
                    window.location.reload();
                }
            });
        });

        $(".edit-item").click(function() {
            let thisElement = $(`#${$(this).attr("id")}`);
            let thisId = $(thisElement).val();

            thisElement.prop("hidden", true);

            $(`#save-item${thisId}`).prop("hidden", false);
            $(`#edit-item-label${thisId}`).prop("disabled", false);
        });

        $(".save-item").click(function() {
            let thisElement = $(`#${$(this).attr("id")}`)
            let thisId = $(thisElement).val();

            thisElement.prop("disabled", true);
            thisLabel = $(`#edit-item-label${thisId}`);
            thisLabel.prop("disabled", true);

            let userData = {
                Label: thisLabel.val()
            };

            $.ajax({
                type: "PUT",
                url: `/todoitem/updatelabel/${thisId}`,
                data: JSON.stringify(userData),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // Handle the API response as needed
                    console.log("Todo list item updated successfully");
                    window.location.reload();
                },
                error: function (error) {
                    // Handle API error
                    console.error("Error updating todo list item:", error);
                    $(`#alert${thisId}`).text("An error occurred")
                    window.location.reload();
                }
            });
        });
    });
</script>
