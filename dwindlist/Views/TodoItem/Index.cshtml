@model dwindlist.Models.ViewModel.TodoList
@{
    ViewData["Title"] = "Home Page";
}
<button id="throwaway" value="testing">Click me!</button>

<div class="container mt-4">
    <div class="row">
        <!-- Right Column (Button to Add Checkboxes) -->
        <div class="text-danger" role="alert" id="alert@(Model.RootId)"></div>
        <div class="form-group">
            <label for="new-item@(Model.RootId)">New Item:</label>
            <input type="text" class="form-control" id="new-item@(Model.RootId)">
            <button type="button" class="btn btn-primary save-changes" id="save-changes@(Model.RootId)" value="@Model.RootId">Add Item</button>
        </div>

        <div id="todo-list">
            @foreach(var item in Model.Items)
            {
            <div class="input-group mb-3" style="width: 100%;">
                <div class="input-group-prepend" style="width: 30px;">
                    <div class="input-group-text">
                        <input type="checkbox" aria-label="Main Checkbox">
                    </div>
                </div>
                <input type="text" disabled="true" class="form-control" aria-label="Text input with checkbox" style="width: calc(100% - 60px);" value="@item.Id: @item.Label">
                <button class="btn btn-sm btn-success">Edit</button>
                <button class="btn btn-sm btn-danger">Delete</button>
            </div>
                <div class="col-md-11 float-end">
                    <div class="text-danger" role="alert" id="alert@(item.Id)"></div>
                    <div class="form-group">
                        <label for="new-item@(item.Id)">New Item:</label>
                        <input type="text" class="form-control" id="new-item@(item.Id)">
                        <button type="button" class="btn btn-primary save-changes" id="save-changes@(item.Id)" value="@item.Id">Add Item</button>
                    </div>
                @foreach(var subitem in item.Children)
                {
                    <div class="input-group mb-3" style="width: 100%;">
                        <div class="input-group-prepend" style="width: 30px;">
                            <div class="input-group-text">
                                <input type="checkbox" aria-label="Main Checkbox">
                            </div>
                        </div>
                        <input type="text" disabled="true" class="form-control" aria-label="Text input with checkbox" style="width: calc(100% - 60px);" value="@subitem.Id: @subitem.Label">
                        <button class="btn btn-sm btn-success">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </div>
                }
                </div>
            }
        </div>

        <!-- Navigation Bar Column (Left) -->
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">All</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Completed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">Incomplete</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        let testButton = $("#throwaway");

        testButton.click(function() {
            alert(testButton.val());
        });

        let saveChanges = $(".save-changes");
        saveChanges.click(function () {
            let thisElement = $("#" + $(this).attr("id"))
            let thisId = $(thisElement).val();
            let userData = {
                Label: $("#new-item" + thisId).val(),
                ParentId: thisId,
                Status: 'i',
            };

            console.log(userData);

            $.ajax({
                type: "POST",
                url: "/todoitem/add",
                data: JSON.stringify(userData),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // Handle the API response as needed
                    console.log("Todo list item added successfully");
                    window.location.reload();
                },
                error: function (error) {
                    // Handle API error
                    console.error("Error adding todo list item:", error);
                    $("#alert" + thisId).text("An error occurred")
                }
            });
        });
    });
</script>
